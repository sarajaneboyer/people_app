<h1>New Person!</h1>
<hr />
<%= form_for @person do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br />

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br />

  <%= f.label :age %>
  <%= f.text_field :age %>
  <br />

  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>
  <br />

  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>
  <br />

  <%= f.label :gender %>
  <%= f.text_field :gender %>
  <br />

  <%= f.label :alive %>
  <%= f.text_field :alive %>
  <br />

  <h2><%= f.submit %></h2>
  <% end %>

  <h2><%= link_to 'Return Home', people_path %></h2>
